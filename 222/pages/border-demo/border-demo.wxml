  <!-- 渐变边框 -->
  <view class="demo-section">
    <text class="section-title">渐变边框效果</text>
    <view class="demo-grid">
      <view class="demo-item kuromi-border-gradient kuromi-border-gradient-1">
        <text class="demo-text">渐变边框 1</text>
