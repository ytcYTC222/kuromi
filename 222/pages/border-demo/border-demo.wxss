/* 边框组件演示页面样式 */
@import '../../styles/kuromi-theme.wxss';

.page-container {
  min-height: 100vh;
  background: var(--kuromi-gradient-bg);
  padding: var(--kuromi-space-6);
}

/* 页面标题 */
.demo-header {
  text-align: center;
  margin-bottom: var(--kuromi-space-12);
}

.demo-title {
  display: block;
  font-size: var(--kuromi-text-3xl);
  font-weight: 700;
  color: var(--kuromi-primary);
  margin-bottom: var(--kuromi-space-2);
  background: var(--kuromi-gradient-1);
  background-clip: text;
  -webkit-background-clip: text;
  -webkit-text-fill-color: transparent;
}

.demo-subtitle {
  display: block;
  font-size: var(--kuromi-text-lg);
  color: var(--kuromi-gray-600);
  font-weight: 400;
}

/* 演示区块 */
.demo-section {
  margin-bottom: var(--kuromi-space-12);
  background: var(--kuromi-white);
  border-radius: var(--kuromi-radius-xl);
  padding: var(--kuromi-space-8);
  box-shadow: var(--kuromi-shadow-md);
}

.section-title {
  display: block;
  font-size: var(--kuromi-text-xl);
  font-weight: 600;
  color: var(--kuromi-primary);
  margin-bottom: var(--kuromi-space-6);
  padding-bottom: var(--kuromi-space-3);
  border-bottom: var(--kuromi-border-width-thin) solid var(--kuromi-border-light);
}

/* 演示网格 */
.demo-grid {
  display: grid;
  grid-template-columns: repeat(auto-fit, minmax(200rpx, 1fr));
  gap: var(--kuromi-space-4);
}

.demo-item {
  padding: var(--kuromi-space-6);
  text-align: center;
  background: var(--kuromi-white);
  min-height: 120rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}

.demo-text {
  font-size: var(--kuromi-text-base);
  color: var(--kuromi-gray-700);
  font-weight: 500;
  margin-bottom: var(--kuromi-space-1);
}

.demo-hint {
  font-size: var(--kuromi-text-xs);
  color: var(--kuromi-gray-500);
  font-style: italic;
}

/* 卡片样式 */
.card-title {
  display: block;
  font-size: var(--kuromi-text-lg);
  font-weight: 600;
  color: var(--kuromi-primary);
  margin-bottom: var(--kuromi-space-3);
}

.card-content {
  display: block;
  font-size: var(--kuromi-text-base);
  color: var(--kuromi-gray-600);
  line-height: var(--kuromi-leading-relaxed);
  margin-bottom: var(--kuromi-space-4);
}

.card-actions {
  display: flex;
  justify-content: flex-end;
}

.card-action {
  color: var(--kuromi-primary);
  font-size: var(--kuromi-text-sm);
  font-weight: 500;
  cursor: pointer;
  transition: var(--transition-all);
}

.card-action:hover {
  color: var(--kuromi-secondary);
}

/* 输入框演示网格 */
.input-demo-grid {
  display: grid;
  gap: var(--kuromi-space-4);
}

/* 分割线演示 */
.divider-demo {
  text-align: center;
}

/* 组合示例 */
.combination-demo {
  max-width: 600rpx;
  margin: 0 auto;
}

.user-info {
  display: flex;
  align-items: center;
  margin-bottom: var(--kuromi-space-4);
}

.avatar {
  width: 120rpx;
  height: 120rpx;
  border-radius: var(--kuromi-radius-full);
  background: var(--kuromi-gradient-1);
  margin-right: var(--kuromi-space-4);
  flex-shrink: 0;
}

.user-details {
  flex: 1;
}

.username {
  display: block;
  font-size: var(--kuromi-text-lg);
  font-weight: 600;
  color: var(--kuromi-gray-800);
  margin-bottom: var(--kuromi-space-1);
}

.user-desc {
  display: block;
  font-size: var(--kuromi-text-sm);
  color: var(--kuromi-gray-500);
}

.user-stats {
  display: flex;
  gap: var(--kuromi-space-3);
}

.stat-item {
  flex: 1;
  text-align: center;
  padding: var(--kuromi-space-4);
  border-radius: var(--kuromi-radius-md);
  background: var(--kuromi-gray-50);
  transition: var(--transition-all);
}

.stat-item:hover {
  background: var(--kuromi-light);
  border-color: var(--kuromi-border-primary);
  transform: translateY(-2rpx);
}

.stat-number {
  display: block;
  font-size: var(--kuromi-text-xl);
  font-weight: 700;
  color: var(--kuromi-primary);
  margin-bottom: var(--kuromi-space-1);
}

.stat-label {
  display: block;
  font-size: var(--kuromi-text-xs);
  color: var(--kuromi-gray-500);
  font-weight: 500;
}

/* 响应式设计 */
@media (max-width: 750rpx) {
  .demo-grid {
    grid-template-columns: repeat(auto-fit, minmax(150rpx, 1fr));
    gap: var(--kuromi-space-3);
  }
  
  .demo-item {
    padding: var(--kuromi-space-4);
    min-height: 100rpx;
  }
  
  .user-info {
    flex-direction: column;
    text-align: center;
  }
  
  .avatar {
    margin-right: 0;
    margin-bottom: var(--kuromi-space-3);
  }
  
  .user-stats {
    flex-direction: column;
  }
}

/* 动画增强 */
@keyframes border-demo-fade-in {
  from {
    opacity: 0;
    transform: translateY(20rpx);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

.demo-section {
  animation: border-demo-fade-in 0.6s ease-out;
}

.demo-section:nth-child(even) {
  animation-delay: 0.1s;
}

.demo-section:nth-child(odd) {
  animation-delay: 0.2s;
}

/* 特殊效果 */
.demo-item:hover {
  transform: scale(1.02);
  transition: var(--transition-all);
}

.kuromi-card-border:hover .card-title {
  background: var(--kuromi-gradient-1);
  background-clip: text;
  -webkit-background-clip: text;
  -webkit-text-fill-color: transparent;
}