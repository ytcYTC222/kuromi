/* 分类页面样式 - 库洛米主题 */
.page-container {
  width: 100%;
  background: var(--kuromi-gradient-4);
  min-height: 100vh;
  position: relative;
}

.page-container::before {
  content: '';
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background-image: 
    radial-gradient(circle at 25% 75%, rgba(255, 105, 180, 0.1) 0%, transparent 50%),
    radial-gradient(circle at 75% 25%, rgba(139, 0, 139, 0.1) 0%, transparent 50%);
  pointer-events: none;
  z-index: -1;
}

.page-container::after {
  content: '📂💜';
  position: absolute;
  top: 5%;
  right: 5%;
  font-size: 28rpx;
  animation: float 2.5s ease-in-out infinite;
  z-index: 1;
}

/* 分类标题 */
.category-header {
  padding: 64rpx 0;
  background-color: var(--neutral);
}

/* 分类内容 */
.category-content {
  padding: 64rpx 0;
}

/* 分类标签页 */
.category-tabs {
  display: flex;
  overflow-x: auto;
  margin-bottom: 48rpx;
  padding-bottom: 16rpx;
  white-space: nowrap;
}

.category-tab {
  padding: 16rpx 32rpx;
  margin-right: 16rpx;
  background-color: white;
  border-radius: 32rpx;
  font-size: 28rpx;
  color: var(--dark);
  box-shadow: 0 4rpx 6rpx -1rpx rgba(0, 0, 0, 0.1);
  transition: all 0.3s ease;
}

.category-tab.active {
  background-color: var(--primary);
  color: white;
}

/* 分类列表 */
.category-list {
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  gap: 32rpx;
}

/* 分类项 - 库洛米主题 */
.category-item {
  background: white;
  border: 3rpx solid rgba(255, 105, 180, 0.2);
  border-radius: 25rpx;
  overflow: hidden;
  box-shadow: var(--kuromi-shadow-medium), var(--kuromi-glow-soft);
  position: relative;
  transition: all 0.3s ease;
}

.category-item::before {
  content: '🌟';
  position: absolute;
  top: 15rpx;
  right: 15rpx;
  font-size: 20rpx;
  animation: sparkle 2s ease-in-out infinite;
  z-index: 2;
}

.category-item:hover {
  transform: translateY(-6rpx) scale(1.02);
  box-shadow: var(--kuromi-shadow-strong), var(--kuromi-glow-pink);
  border-color: var(--kuromi-primary);
}

.category-image-container {
  width: 100%;
  height: 200rpx;
  overflow: hidden;
}

.category-image {
  width: 100%;
  height: 100%;
  transition: transform 0.3s ease;
}

.category-item:hover .category-image {
  transform: scale(1.05);
}

.category-item-info {
  padding: 24rpx;
}

.category-item-title {
  font-weight: 600;
  font-size: 28rpx;
  margin-bottom: 8rpx;
}

.category-item-count {
  color: var(--dark-gray);
  font-size: 24rpx;
}

/* 热门分类 */
.popular-categories {
  padding: 64rpx 0;
  background-color: var(--neutral);
}

.popular-grid {
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  gap: 32rpx;
}

.popular-card {
  cursor: pointer;
}

.popular-image-container {
  position: relative;
  overflow: hidden;
  border-radius: 16rpx;
  box-shadow: 0 8rpx 12rpx -2rpx rgba(0, 0, 0, 0.1), 0 4rpx 8rpx -2rpx rgba(0, 0, 0, 0.06);
}

.popular-image {
  width: 100%;
  height: 320rpx;
  transition: transform 0.5s ease;
}

.popular-card:hover .popular-image {
  transform: scale(1.1);
}

.popular-overlay {
  position: absolute;
  inset: 0;
  background: linear-gradient(to top, rgba(0, 0, 0, 0.7), transparent);
  opacity: 0.7;
}

.popular-info {
  position: absolute;
  bottom: 32rpx;
  left: 32rpx;
  color: white;
}

.popular-title {
  font-weight: bold;
  font-size: 32rpx;
}

.popular-count {
  color: rgba(255, 255, 255, 0.8);
  font-size: 24rpx;
}

/* 加载状态 */
.loading-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 120rpx 0;
}

.loading-spinner {
  width: 60rpx;
  height: 60rpx;
  border: 4rpx solid #f3f3f3;
  border-top: 4rpx solid var(--primary);
  border-radius: 50%;
  animation: spin 1s linear infinite;
  margin-bottom: 24rpx;
}

@keyframes spin {
  0% { transform: rotate(0deg); }
  100% { transform: rotate(360deg); }
}

.loading-text {
  color: var(--dark-gray);
  font-size: 28rpx;
}

/* 错误状态 */
.error-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 120rpx 0;
}

.error-icon {
  font-size: 80rpx;
  margin-bottom: 24rpx;
}

.error-text {
  color: var(--dark-gray);
  font-size: 28rpx;
  margin-bottom: 32rpx;
  text-align: center;
}

.retry-btn {
  background-color: var(--primary);
  color: white;
  border: none;
  border-radius: 32rpx;
  padding: 16rpx 32rpx;
  font-size: 28rpx;
  transition: background-color 0.3s ease;
}

.retry-btn:hover {
  background-color: var(--primary-dark);
}

/* 空状态 */
.empty-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 120rpx 0;
}

.empty-icon {
  font-size: 80rpx;
  margin-bottom: 24rpx;
  opacity: 0.6;
}

.empty-text {
  color: var(--dark-gray);
  font-size: 28rpx;
  text-align: center;
}

/* 响应式调整 */
@media (min-width: 768px) {
  .category-list {
    grid-template-columns: repeat(3, 1fr);
  }
  
  .popular-grid {
    grid-template-columns: repeat(4, 1fr);
  }
}