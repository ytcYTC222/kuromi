.page-container {
  min-height: 100vh;
  background: linear-gradient(135deg, #f8f0ff 0%, #ffe8f5 50%, #f0f8ff 100%);
  padding-bottom: 120rpx;
  position: relative;
}

.page-container::before {
  content: '';
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background-image: 
    radial-gradient(circle at 20% 80%, rgba(255, 105, 180, 0.12) 0%, transparent 50%),
    radial-gradient(circle at 80% 20%, rgba(139, 0, 139, 0.12) 0%, transparent 50%);
  pointer-events: none;
  z-index: -1;
}

.page-container::after {
  content: 'üìçüíú';
  position: absolute;
  top: 6%;
  right: 6%;
  font-size: 26rpx;
  animation: float 2.8s ease-in-out infinite;
  z-index: 1;
}

@keyframes float {
  0%, 100% { transform: translateY(0px); }
  50% { transform: translateY(-8px); }
}

