.page-container {
  background: var(--kuromi-gradient-5);
  min-height: 100vh;
  position: relative;
}

.page-container::before {
  content: '';
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background-image: 
    radial-gradient(circle at 20% 80%, rgba(255, 105, 180, 0.1) 0%, transparent 50%),
    radial-gradient(circle at 80% 20%, rgba(139, 0, 139, 0.1) 0%, transparent 50%);
  pointer-events: none;
  z-index: -1;
}

.page-container::after {
  content: 'üõçÔ∏èüíú';
  position: absolute;
  top: 5%;
  right: 5%;
  font-size: 28rpx;
  animation: float 2.5s ease-in-out infinite;
  z-index: 1;
}

