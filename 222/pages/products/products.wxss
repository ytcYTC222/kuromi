/* Á≠õÈÄâÂô® */
.filter-section {
  background: white;
  padding: 30rpx 0;
  border-bottom: 1rpx solid #eee;
}

.filter-row {
  display: flex;
  justify-content: space-between;
  align-items: center;
  flex-wrap: wrap;
  gap: 20rpx;
}

.filter-group {
  display: flex;
  align-items: center;
  min-width: 200rpx;
}

.filter-label {
  font-size: 28rpx;
  color: #666;
  margin-right: 16rpx;
  white-space: nowrap;
}

.filter-value {
  display: flex;
  align-items: center;
  padding: 12rpx 20rpx;
  background: #f8f9fa;
  border-radius: 20rpx;
  font-size: 26rpx;
  color: #333;
  border: 1rpx solid #e9ecef;
}

.icon-down::after {
  content: '‚ñº';
  font-size: 20rpx;
  margin-left: 8rpx;
  color: #999;
}

.filter-tags {
  display: flex;
  flex-wrap: wrap;
  gap: 16rpx;
  margin-top: 20rpx;
}

.filter-tag {
  display: flex;
  align-items: center;
  padding: 8rpx 16rpx;
  background: #e3f2fd;
  color: #1976d2;
  border-radius: 16rpx;
  font-size: 24rpx;
}

.icon-close::after {
  content: '√ó';
  font-size: 28rpx;
  margin-left: 8rpx;
  cursor: pointer;
}

/* ‰∫ßÂìÅÂàóË°® */
.products-list {
  padding: 30rpx 0;
}

.products-grid {
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  gap: 24rpx;
  padding: 0 20rpx;
}

.product-card {
  background: white;
  border-radius: 20rpx;
  overflow: hidden;
  box-shadow: 0 8rpx 24rpx rgba(0, 0, 0, 0.08);
  transition: all 0.3s ease;
  border: 1rpx solid rgba(0, 0, 0, 0.05);
}

.product-card:active {
  transform: translateY(-4rpx);
  box-shadow: 0 12rpx 32rpx rgba(0, 0, 0, 0.12);
}

.product-image-container {
  position: relative;
  width: 100%;
  height: 280rpx;
  overflow: hidden;
}

.product-image {
  width: 100%;
  height: 100%;
  object-fit: cover;
  transition: transform 0.3s ease;
}

.product-card:hover .product-image {
  transform: scale(1.05);
}

.product-add-to-cart {
  position: absolute;
  bottom: 0;
  left: 0;
  right: 0;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: white;
  text-align: center;
  padding: 20rpx;
  font-size: 28rpx;
  font-weight: 600;
  transform: translateY(100%);
  transition: all 0.3s ease;
  z-index: 1;
  backdrop-filter: blur(10rpx);
}

.product-card:hover .product-add-to-cart {
  transform: translateY(0);
}

.product-content {
  padding: 28rpx 24rpx;
  position: relative;
  z-index: 2;
  background: white;
}

.product-rating {
  display: flex;
  align-items: center;
  margin-bottom: 16rpx;
}

.rating-stars {
  display: flex;
  margin-right: 12rpx;
  font-size: 24rpx;
}

.rating-stars text {
  color: #ffc107;
  margin-right: 2rpx;
}

.icon-star::after {
  content: '‚òÖ';
  color: #ffc107;
  font-size: 24rpx;
}

.icon-star-half-o::after {
  content: '‚òÜ';
  color: #ffc107;
  font-size: 24rpx;
}

.icon-star-o::after {
  content: '‚òÜ';
  color: #ddd;
  font-size: 24rpx;
}

.rating-count {
  font-size: 22rpx;
  color: #666;
  font-weight: 500;
}

.product-title {
  font-size: 30rpx;
  font-weight: 700;
  color: #2c3e50;
  margin-bottom: 12rpx;
  line-height: 1.4;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  overflow: hidden;
}

.product-description {
  font-size: 24rpx;
  color: #7f8c8d;
  line-height: 1.5;
  margin-bottom: 20rpx;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  overflow: hidden;
}

.product-footer {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding-top: 8rpx;
  border-top: 1rpx solid #f8f9fa;
}

.product-price {
  font-size: 34rpx;
  font-weight: 800;
  color: #e74c3c;
  background: linear-gradient(135deg, #e74c3c 0%, #c0392b 100%);
  -webkit-background-clip: text;
  -webkit-text-fill-color: transparent;
}

.add-to-cart-button {
  width: 64rpx;
  height: 64rpx;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: white;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 28rpx;
  transition: all 0.3s ease;
  box-shadow: 0 4rpx 12rpx rgba(102, 126, 234, 0.3);
}

.add-to-cart-button:active {
  transform: scale(0.95);
  box-shadow: 0 2rpx 8rpx rgba(102, 126, 234, 0.4);
}

